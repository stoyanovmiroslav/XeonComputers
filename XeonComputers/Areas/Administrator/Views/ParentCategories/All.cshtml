@using XeonComputers.Areas.Administrator.ViewModels.ParentCategory

@model ICollection<ParentCategoryViewModel>

@{
    ViewData["Title"] = "Основни категории";
}

<div class="container">
    <div class="text-center"><h2>@ViewData["Title"]</h2></div>
    <div class="text-center"><h6>Може да изтриете основна категория само ако не съдържа други категории!</h6></div>
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-1 d-flex justify-content-center">#</th>
                <th scope="col" class="col-lg-1 d-flex justify-content-center">Номер</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center">Име</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center">Брой категории</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center">Действие</th>
            </tr>
        </thead>
        <tbody>

            @{int count = 0; }
            @foreach (var category in Model)
            {
                count++;
                <tr class="row">
                    <td class="col-lg-1 d-flex justify-content-center">@count</td>
                    <td class="col-lg-1 d-flex justify-content-center">@category.Id</td>
                    <td class="col-lg-3 d-flex justify-content-center">@category.Name</td>
                    <td class="col-lg-3 d-flex justify-content-center">@category.ChildCategoriesCount</td>
                    <td class="col-lg-3 d-flex justify-content-around">
                        <a asp-controller="ParentCategories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Промени</a>
                        <a asp-controller="ParentCategories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-primary">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>