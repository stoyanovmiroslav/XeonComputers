@model IList<RequestUserCompanyViewModel>

@{
    ViewData["Title"] = "Заявки за партньорство";
}

<div class="container mobile-fondsize-11 shadow pr-4 pl-4 pb-4 mb-4 bg-white">
    <div class="mobile-fondsize-20 h3 text-center text-muted font-italic pb-2">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-md-3 col d-flex justify-content-center">Име</th>
                <th scope="col" class="col-md-2 col d-flex justify-content-center">ЕИК</th>
                <th scope="col" class="col-md-2 col d-flex justify-content-center">Управител</th>
                <th scope="col" class="col-md-2 col d-flex justify-content-center">Адрес</th>
                <th scope="col" class="col-md-3 col d-flex justify-content-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr class="row">
                    <td class="col-md-3 col d-flex justify-content-center">
                       @request.CompanyName
                    </td>
                    <td class="col-md-2 col d-flex justify-content-center">
                        @request.CompanyUniqueIdentifier
                    </td>
                    <td class="col-md-2 col d-flex justify-content-center">
                        @request.CompanyManager
                    </td>
                    <td class="col-md-2 col d-flex justify-content-center">
                        @request.CompanyAddressCityName, @request.CompanyAddressStreet @request.CompanyAddressDescription
                    </td>
                    <td class="col-md-3 col d-flex justify-content-around">
                        <div class="mr-2">
                            <a asp-area="Administrator" asp-controller="PartnerRequests" asp-action="Approve" asp-route-id="@request.PartnerRequestId" asp-route-username="@request.UserName" class="btn btn-success btn-sm">Одобри</a>
                        </div>
                        <div class="mr-2">
                            <a asp-area="Administrator" asp-controller="PartnerRequests" asp-action="Remove" asp-route-id="@request.PartnerRequestId" class="btn btn-danger btn-sm">Премахни</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count == 0)
    {
        <div class="mobile-fondsize-11 h6 text-center font-italic">Нямате нови заявки за партьорство!</div>
    }
</div>