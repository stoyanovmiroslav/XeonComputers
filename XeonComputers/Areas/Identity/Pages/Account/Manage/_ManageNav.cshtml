    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="@ManageNavPages.IndexNavClass(ViewContext) nav-item nav-link">
                <a asp-page="./Index" class="nav-link">Профил</a>
            </li>
            <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext) nav-item nav-link">
                <a id="change-password" asp-page="./ChangePassword" class="nav-link">Смяна на парола</a>
            </li>
            @if (hasExternalLogins)
            {
                <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) nav-item nav-link">
                    <a id="external-login" asp-page="./ExternalLogins" class="nav-link">Външен вход</a>
                </li>
            }
