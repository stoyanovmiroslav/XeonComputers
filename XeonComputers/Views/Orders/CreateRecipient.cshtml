@using Microsoft.AspNetCore.Http.Features

@model RecipientOrderViewModel

@{
    ViewData["Title"] = "Данни за поръчката";
    Layout = "_LayoutClean";
}


<div class="h3 text-center mb-3">@ViewData["Title"]</div>
<div class="progress mb-3">
    <div class="progress-bar" role="progressbar" style="width: 66%;" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100">66%</div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-body py-0">
            <form method="post" asp-controller="Orders" asp-action="CreateRecipient">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Име и фамилия" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="GSM номер" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="h6 font-weight-bold">Метод на плащане:</div>
                    <div>
                        <input asp-for="PaymentType" type="radio" id="EasyPay" value="EasyPay" checked>
                        <label for="EasyPay">В брой (Изипей)</label>
                    </div>
                    <div>
                        <input asp-for="PaymentType" type="radio" id="CashОnDelivery" value="CashОnDelivery">
                        <label for="CashОnDelivery">Наложен платеж</label>
                    </div>
                    <div>
                        <input asp-for="PaymentType" type="radio" id="Card" value="Card">
                        <label for="Card">Visa, MasterCard и др.</label>
                    </div>
                    <div>
                        <input asp-for="PaymentType" type="radio" id="Epay" value="Epay">
                        <label for="Epay">ePay.bg</label>
                    </div>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-success text-white">Продължи с поръчката</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">

    </div>
</div>