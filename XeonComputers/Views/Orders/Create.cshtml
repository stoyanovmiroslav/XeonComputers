@using Microsoft.AspNetCore.Http.Features

@model CreateOrderViewModel

@{
    ViewData["Title"] = "Данни за поръчката";
    Layout = "Layouts/_LayoutMiddle";
}

<div class="h3 text-center mb-3">@ViewData["Title"]</div>
<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 33%;" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100">33%</div>
</div>
<div class="h3 mt-3 mb-2">Адрес за доставка</div>

<div class="row">
    <div class="col-md-6">
        @if (Model.OrderAddressesViewModel.Count == 0)
        {
            <p>Все още нямате добавени адреси във вашия профил.</p>
        }
        <form method="post" asp-controller="Orders" asp-action="Create">
            <ul class="list-group">
                @foreach (var address in Model.OrderAddressesViewModel)
                {
                    <li class="list-group-item">
                        <div class="form-group border-primary mb-0">
                            <label>
                                <input asp-for="DeliveryAddressId" type="radio" value="@address.Id" />
                                @address.DeliveryAddress @address.AdditionТoАddress, @address.City,  @address.Postcode
                            </label>
                        </div>
                    </li>
                }
            </ul>
            <span asp-validation-for="DeliveryAddressId" class="text-danger"></span>
            <div class="text-right mt-3">
                <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Добави нов адрес</a>
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" placeholder="Име и фамилия" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="GSM номер" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="h6 font-weight-bold">Метод на плащане:</div>
                <div>
                    <input asp-for="PaymentType" type="radio" id="EasyPay" value="EasyPay" checked>
                    <label for="EasyPay">В брой (Изипей)</label>
                </div>
                <div>
                    <input asp-for="PaymentType" type="radio" id="CashОnDelivery" value="CashОnDelivery">
                    <label for="CashОnDelivery">Наложен платеж</label>
                </div>
                <div>
                    <input asp-for="PaymentType" type="radio" id="Card" value="Card">
                    <label for="Card">Visa, MasterCard и др.</label>
                </div>
                <div>
                    <input asp-for="PaymentType" type="radio" id="Epay" value="Epay">
                    <label for="Epay">ePay.bg</label>
                </div>
            </div>
            <div class="text-right mt-3 mb-3">
                <button type="submit" class="form-group btn btn-success btn-lg mb-0">Продължи с поръчката</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="collapse multi-collapse" id="multiCollapseExample1">
            <div class="card card-body py-0">
                <form method="post" asp-controller="Addresses" asp-action="Add">
                    <div asp-validation-summary="All" class="text-danger mt-3"></div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderAdressViewModel.DeliveryAddress"></label>
                        <input asp-for="@Model.OrderAdressViewModel.DeliveryAddress" name="DeliveryAddress" class="form-control" placeholder="Адрес" />
                        <span asp-validation-for="@Model.OrderAdressViewModel.DeliveryAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderAdressViewModel.AdditionТoАddress"></label>
                        <input asp-for="@Model.OrderAdressViewModel.AdditionТoАddress" name="AdditionТoАddress" class="form-control" placeholder="Допълнение към адреса" />
                        <span asp-validation-for="@Model.OrderAdressViewModel.AdditionТoАddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderAdressViewModel.City"></label>
                        <input asp-for="@Model.OrderAdressViewModel.City" name="City" class="form-control" placeholder="Град" />
                        <span asp-validation-for="@Model.OrderAdressViewModel.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OrderAdressViewModel.Postcode"></label>
                        <input asp-for="@Model.OrderAdressViewModel.Postcode" name="Postcode" class="form-control" placeholder="Пощенски код" />
                        <span asp-validation-for="@Model.OrderAdressViewModel.Postcode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn xeon-color text-white">Добави адрес</button>
                    </div>
                </form>
            </div>
        </div>
        @await Component.InvokeAsync(typeof(FullShoppingCartComponent))
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/Partials/_ValidationScriptsPartial.cshtml" />
}