@model IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model.ProductsViewModel)
    {
        <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-3">
            <div class="card">
                <img class="card-img-top" src="@product.ImageUrl">
                <div class="card-body text-center">
                    <h6 class="card-title font-weight-bold">@product.Name</h6>
                    <div class="text-center">
                        <img src="~/images/Rating/stars-5.png">
                        <a class="h6 font-italic text-info" asp-action="">1 ревю</a>
                    </div>
                    @*<p class="card-text">@product.Description</p>*@
                </div>
                <ul class="list-group list-group-flush">

                    @*<li class="list-group-item">Dapibus ac facilisis in</li>*@

                    @if (User.IsInRole("Partner"))
                    {
                        <li class="list-group-item text-center font-weight-bold text-danger">@product.ParnersPrice лв.</li>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <li class="list-group-item text-center font-weight-bold text-danger h5">@product.Price лв.</li>
                        <li class="list-group-item text-center font-weight-bold text-danger h5">@product.ParnersPrice лв.</li>
                    }
                    else
                    {
                        <li class="list-group-item">
                            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-white"><i class="fas fa-user"></i> Вход</a>
                        </li>
                    }
                </ul>
                <div class="card-body d-flex justify-content-between">
                    <button type="button" class="btn btn-danger btn-sm"><i class="fas fa-heart"></i></button>
                    <button type="button" class="btn btn-primary btn-sm"><i class="fas fa-shopping-cart"> Добави</i></button>

                    @*<a href="#" class="card-link"><i class="fas fa-heart"></i></a>*@
                    @*<a href="#" class="card-link"><i class="fas fa-shopping-cart"> Добави</i></a>*@
                </div>
            </div>
        </div>
    }
</div>