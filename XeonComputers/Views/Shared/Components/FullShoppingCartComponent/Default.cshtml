@model List<AllFavoriteViewModel>

<div class="container mobile-fondsize-11 bg-white">
    <table class="table table-sm table-hover mb-0">
        <thead>
            <tr class="row">
                <th scope="col" class="col-2 d-flex justify-content-center">Продукт</th>
                <th scope="col" class="col-4 d-flex justify-content-center"></th>
                <th scope="col" class="col-2 d-flex justify-content-center">Ед. цена</th>
                <th scope="col" class="col-2 d-flex justify-content-center">Брой</th>
                <th scope="col" class="col-2 d-flex justify-content-center">Общо</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr class="row">
                    <td class="col-2 d-flex justify-content-center">
                        <img src="@product.ImageUrl" width="50" height="50">
                    </td>
                    <td class="col-4 d-flex justify-content-center">
                        @product.Name
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        @product.Price лв.
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        @product.Quantity
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        @product.TotalPrice лв.
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row mt-5">
        <div class="col-4">
            <a asp-area="" asp-controller="Orders" asp-action="Finish" class="btn btn-danger btn-lg btn-block">Купи</a>
        </div>
        <div class="col-8">
            <p class=" text-danger h6 text-right">Общо за продуктите: @(Model.Sum(x => x.Price * x.Quantity))лв.</p>
            <p class=" text-danger h6 text-right">Цена за доставка: 5.00лв.</p>
            <br />
            <p class="font-weight-bold text-danger h5 text-right">Сума за плащане: @((Model.Sum(x => x.Price * x.Quantity)) + 5)лв.</p>
        </div>
    </div>
</div>