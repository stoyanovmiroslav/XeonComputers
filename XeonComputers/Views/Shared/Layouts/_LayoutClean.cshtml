@using Microsoft.AspNetCore.Identity
@using XeonComputers.Models

@inject SignInManager<XeonUser> SignInManager
@inject UserManager<XeonUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XeonComputers</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/reset-css.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="container shadow">
        <partial name="~/Views/Shared/Partials/_NavbarPartial.cshtml" />
        <hr class="my-1 hr-xeon" />
        <partial name="~/Views/Shared/Partials/_CookieConsentPartial.cshtml" />

        @if (this.User.IsInRole(Role.Admin.ToString()))
        {
            <partial name="~/Areas/Administrator/Views/Shared/_NavbarAdminPartial.cshtml" />
        }

        <partial name="~/Views/Shared/Partials/_ErrorMessagePartial.cshtml" />

        <div class="body-content">
            @RenderBody()
            <hr class="my-1 hr-xeon mt-3" />
            <partial name="~/Views/Shared/Partials/_FooterPartial.cshtml" />
        </div>
    </div>

    <script src="~/js/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/js/popper.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>